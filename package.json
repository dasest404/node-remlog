{
	"name": "remlog",
	"version": "0.1.0",
	"main": "index.js",
	"repository": "https://github.com/namics/node-remlog.git",
	"author": "Jan Biasi <biasijan@gmail.com>",
	"license": "MIT",
	"private": true,
	"scripts": {
		"build": "lerna run build",
		"test": "lerna run test",
		"bootstrap": "lerna bootstrap --hoist",
		"testsuite": "lerna-terminal test",
		"clean-lock": "rm -rf ./**/package-lock.json && npm run bootstrap",
		"generate-changelog": "lerna run generate-changelog",
		"generate-changelog-terminal": "lerna-terminal generate-changelog",
		"clean-package-lock": "rm -rf ./**/*package-lock.json",
		"clean-remlog-files": "rm -rf ./**/remlog.json ./**/remlog.log",
		"prettier": "./hooks/prettier.sh",
		"precommit": "yarn run prettier && yarn run clean-remlog-files",
		"commit": "git-cz",
		"prepare-release": "yarn run prettier && yarn run test && yarn run generate-changelog",
		"publish-packages": "lerna publish --exact -m \"chore(release): Publish new release\""
	},
	"devDependencies": {
		"commitizen": "2.9.6",
		"conventional-changelog-cli": "1.3.5",
		"cz-conventional-changelog": "2.1.0",
		"lerna": "2.0.0",
		"lerna-terminal": "1.1.1",
		"prettier": "1.10.2"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
